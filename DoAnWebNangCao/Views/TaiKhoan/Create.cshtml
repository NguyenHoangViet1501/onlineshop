<h2>Thêm Tài Khoản</h2>

<form id="createUserForm">
    <div class="card-body">
        <!-- Cột 1 -->
        <div class="form-group-short">
            <div class="form-group">
                <label for="Account">Tài khoản</label>
                <input type="text" id="Account" name="Account" required />
            </div>
            <div class="form-group">
                <label for="Name">Tên</label>
                <input type="text" id="Name" name="Name" required />
            </div>
        </div>

        <div class="form-group-short">
            <div class="form-group">
                <label for="Password">Mật khẩu</label>
                <input type="password" id="Password" name="Password" required />
            </div>
            <div class="form-group">
                <label for="Phone">Số điện thoại</label>
                <input type="text" id="Phone" name="Phone" required />
            </div>

        </div>



        <div class="form-group-short">
            <div class="form-group">
                <label for="Role">Vai trò</label>
                <select id="Role" name="Role">
                    <option value="Admin">Admin</option>
                    <option value="Customer">Customer</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Address">Địa chỉ</label>
                <input type="text" id="Address" name="Address" required />
            </div>

        </div>
        <div class="form-group-short">
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" id="Email" name="Email" required />
            </div>

            <!-- Nút "Thêm Tài Khoản" chiếm toàn bộ chiều rộng -->
            
        </div>
        <button type="button" onclick="submitForm()">Thêm Tài Khoản</button>
    </div>
</form>





<script>
    function submitForm() {
        var formData = {
            Account: $('#Account').val(),
            password: $('#Password').val(),
            Role: $('#Role').val(),
            Name: $('#Name').val(),
            Phone: $('#Phone').val(),
            Address: $('#Address').val(),
            Email: $('#Email').val()
        };

        $.ajax({
            url: '@Url.Action("ThemTaiKhoan", "TaiKhoan")',
            type: 'POST',
            data: formData,
            success: function (response) {
                alert(response.message);
                setTimeout(function () {
                    location.replace('@Url.Action("Index","TaiKhoan")');
                }, 2000);
            },
            error: function() {
                alert('Có lỗi xảy ra khi thêm tài khoản.');
            }
        });
    }
</script>
